[Unit]
Description=AdGuard Home
After=network.target
StartLimitIntervalSec=5
StartLimitBurst=10

[Service]
Type=simple
User={{ adguardhome_user }}
Group={{ adguardhome_user }}
WorkingDirectory={{ adguardhome_install_dir }}
ExecStart={{ adguardhome_install_dir }}/AdGuardHome --no-check-update --config {{ adguardhome_config_file }} --work-dir {{ adguardhome_data_dir }}
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target