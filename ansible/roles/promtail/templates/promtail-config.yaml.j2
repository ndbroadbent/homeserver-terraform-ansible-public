# Promtail configuration
# Generated by Ansible - do not edit manually

server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: {{ promtail_positions_file }}

clients:
  - url: {{ promtail_loki_url }}
    basic_auth:
      username: {{ promtail_basic_auth_user }}
      password: {{ promtail_basic_auth_password }}

scrape_configs:
  # Systemd journal logs
  - job_name: journal
    journal:
      max_age: 12h
      labels:
        job: systemd-journal
    relabel_configs:
      - source_labels: ['__journal__systemd_unit']
        target_label: unit
      - source_labels: ['__journal__hostname']
        target_label: hostname
      - source_labels: ['__journal_priority_keyword']
        target_label: level
      - source_labels: ['__journal_syslog_identifier']
        target_label: syslog_identifier
    pipeline_stages:
      - static_labels:
          host: {{ inventory_hostname }}

  # Syslog file (if exists)
  - job_name: syslog
    static_configs:
      - targets:
          - localhost
        labels:
          job: syslog
          host: {{ inventory_hostname }}
          __path__: /var/log/syslog
    pipeline_stages:
      - match:
          selector: '{job="syslog"}'
          stages:
            - regex:
                expression: '^(?P<timestamp>\w+\s+\d+\s+\d+:\d+:\d+)\s+(?P<hostname>\S+)\s+(?P<app>\S+?)(\[(?P<pid>\d+)\])?:\s+(?P<message>.*)$'
            - labels:
                app:

  # Auth log (if exists)
  - job_name: auth
    static_configs:
      - targets:
          - localhost
        labels:
          job: auth
          host: {{ inventory_hostname }}
          __path__: /var/log/auth.log

  # Kernel log (if exists)
  - job_name: kern
    static_configs:
      - targets:
          - localhost
        labels:
          job: kern
          host: {{ inventory_hostname }}
          __path__: /var/log/kern.log

{% if promtail_extra_scrape_configs %}
  # Host-specific application logs
{{ promtail_extra_scrape_configs | indent(2, first=true) }}
{% endif %}
