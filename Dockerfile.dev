FROM ubuntu:22.04

# Set environment variables for non-interactive installation
ENV DEBIAN_FRONTEND=noninteractive
ENV NODE_VERSION=20
ENV TZ=UTC
ENV TERM=xterm

# Set up Python virtual environment in /opt/venv and ensure it's on PATH
ENV VIRTUAL_ENV=/opt/venv
ENV PATH="$VIRTUAL_ENV/bin:$PATH"

# Install basic dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    software-properties-common \
    python3 \
    python3-pip \
    python3-venv \
    git \
    tzdata \
    sudo \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# Set timezone to avoid prompts
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# Install Node.js
RUN curl -fsSL https://deb.nodesource.com/setup_${NODE_VERSION}.x | bash - \
    && apt-get install -y nodejs

# Set working directory
WORKDIR /workspace

RUN mkdir -p scripts
ADD scripts/shared/ scripts/shared/

# Run setup scripts in separate layers for better caching
COPY scripts/setup/packages.sh scripts/setup/packages.sh
RUN ./scripts/setup/packages.sh && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy Python requirements and Ansible requirements before running python_venv.sh
COPY requirements.txt requirements.txt
COPY ansible/requirements.yml ansible/requirements.yml

COPY scripts/setup/python_venv.sh scripts/setup/python_venv.sh
RUN ./scripts/setup/python_venv.sh

# Copy Helm repos config if it exists
COPY helm-repos.yaml* ./
COPY scripts/helm_update.sh scripts/helm_update.sh
COPY scripts/setup/helm.sh scripts/setup/helm.sh
RUN ./scripts/setup/helm.sh

COPY scripts/setup/verify.sh scripts/setup/verify.sh
RUN ./scripts/setup/verify.sh

# Set default command
CMD ["/bin/bash"] 
